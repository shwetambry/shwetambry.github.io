<?php
if(isset($_SESSION['products']))
{
	print "Number of products added in the cart: ".sizeof($_SESSION['products']);
	print "<b> Your cart : </b> <ol>";
	foreach ($_SESSION['products'] as $prod)
	{
		print "<li>$prod";
	}
	print "</ol>";
}
else
{
	print "Nothing has been selected so far.<br> "
}
?>
